<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>tientt.filter.DispatcherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>tientt.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>StoreSessionFilter</filter-name>
        <filter-class>tientt.filter.StoreSessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StoreSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>tientt.listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>AuthLoginServlet</servlet-name>
        <servlet-class>tientt.servlet.AuthLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountSearchServlet</servlet-name>
        <servlet-class>tientt.servlet.AccountSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountDeleteServlet</servlet-name>
        <servlet-class>tientt.servlet.AccountDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountUpdateServlet</servlet-name>
        <servlet-class>tientt.servlet.AccountUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthStartupController</servlet-name>
        <servlet-class>tientt.servlet.AuthStartupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartViewServlet</servlet-name>
        <servlet-class>tientt.servlet.CartViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartAddItemServlet</servlet-name>
        <servlet-class>tientt.servlet.CartAddItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthLogoutServlet</servlet-name>
        <servlet-class>tientt.servlet.AuthLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreViewServlet</servlet-name>
        <servlet-class>tientt.servlet.StoreViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartDeleteItemServlet</servlet-name>
        <servlet-class>tientt.servlet.CartDeleteItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartCheckoutServlet</servlet-name>
        <servlet-class>tientt.servlet.CartCheckoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthRegisterServlet</servlet-name>
        <servlet-class>tientt.servlet.AuthRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthLoginServlet</servlet-name>
        <url-pattern>/AuthLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountSearchServlet</servlet-name>
        <url-pattern>/AccountSearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountDeleteServlet</servlet-name>
        <url-pattern>/AccountDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountUpdateServlet</servlet-name>
        <url-pattern>/AccountUpdateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthStartupController</servlet-name>
        <url-pattern>/AuthStartupController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartViewServlet</servlet-name>
        <url-pattern>/CartViewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartAddItemServlet</servlet-name>
        <url-pattern>/CartAddItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthLogoutServlet</servlet-name>
        <url-pattern>/AuthLogoutServlet</url-pattern>
